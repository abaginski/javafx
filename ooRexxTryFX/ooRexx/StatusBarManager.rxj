::class StatusBarManager public
::method init
  expose statusBar label
  statusBar = .my.app~ooRexxTryFX.fxml~StatusBar
  label = statusBar~getChildren~get(0)

::method unknown
  say "[information] unhandled call {"arg(1)"}"


::method setMessage
  expose label
  use arg msg
  label~setText(msg)

::method setTempMessage
  use arg msg, time=5
  self~setMessage(msg)
  call SysSleep time
  self~setMessage("Ready")

::requires bsf.cls